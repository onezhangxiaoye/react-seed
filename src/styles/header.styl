@import '../utils/stylus/baseStylus.styl'
.App-header
    height 90px
    color: $font-color
    position: absolute
    top: 30px
    left 30px
    right 30px
    z-index: 1
    border: 3px solid $background-color-ccc
    border-radius: $border-radius 
    display: flex
    align-items: center
    flex-direction: row-reverse
    transition: border-color .5s
    overflow: auto
    &:hover
        border-color: $background-color-888
    .time
        float right
        margin-right: 20px
        cursor pointer
    .portrait
        display: flex
        align-items: center
        padding-right: 20px
        >img
            border-radius: 50px
            width: 50px
            margin: 0 5px
.my
    >li
        margin-bottom: 5px
        cursor pointer
        background-color: #fff
        transition: background-color .5s
        &:hover
            background-color: #ccc