@import './dataList.styl';
@import './catalog.styl';
@import './header.styl';
@import './imgDataList.styl';
@import './AddImgData.styl';
@import './test3.styl';
@import './reactCSSTransitionGroup.styl';
@import './addUrl.styl';
.App
  .canvas
    position: fixed
    top: 0
    left: 0
    right: 0
    bottom: 0
  .test1
    overflow: auto
    height: 100%
    .test-move
      width: 300px
      height: 100px
      background-color: pink
      margin: 10px
  .body-right
    position: absolute
    left: 235px
    top: 150px
    right: 30px
    bottom: 30px
    border: 3px solid $background-color-ccc
    border-radius: $border-radius 
    transition: border-color .5s
    overflow: auto 
    overflow-x: hidden
    &:hover
        border-color: $background-color-888
    .appRouter
      width: 100%
      position: absolute
      height: 100%
      transition: left 1s,opacity 1s
    .Body-header
      height 100%
      display flex
      flex-direction column
      align-items center
      justify-content center
      font-size calc(10px + 2vmin)
      color font-color
      position relative
      overflow hidden
      .move-img
        position absolute
        top 0px
        transition left 0.5s, top 0.5s, transform 0.5s
        width 150px
      .Body-logo
          animation: Body-logo-spin infinite 20s linear
          height: 40vmin
      .animation-btn
        padding 0 20px
        background-color #FFF
        border-radius 6px
        color black
        line-height 40px
        text-align center
        margin-top 10px
        cursor pointer
        position absolute
        z-index 1
        bottom 40px
::selection
    background:$selection-bg
    color:$selection-color

@keyframes Body-logo-spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}