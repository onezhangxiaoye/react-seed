.App
  width 100%
  height 100vh
  .App-header
    height 10%
    background-color #61dafb
  .App-body
    height 90%
    >div
      height 100%
      float left
    .Body
      text-align center
      width 85%
      .Body-header
        height 100%
        background-color #cccccc
        display flex
        flex-direction column
        align-items center
        justify-content center
        font-size calc(10px + 2vmin)
        color white
        position relative
        overflow hidden
        .move-img
          position absolute
          top 0px
          transition left 0.5s, top 0.5s, transform 0.5s
          width 150px
        .animation-btn
          padding 0 20px
          background-color #FFF
          border-radius 6px
          color black
          line-height 40px
          text-align center
          margin-top 10px
          cursor pointer
          position absolute
          z-index 1
          bottom 40px
    .App-catalog
      width 15%
      background-color bisque
      text-align center