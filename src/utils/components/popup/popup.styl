.popup
    position: absolute
    top: 0
    left 0
    right 0
    bottom 0
    display: flex
    align-items: center
    justify-content: center
    background-color: rgba(48, 48, 48, 0)
    transition: background-color .5s
    z-index 999
    .popupScale
        height 100%
        display: flex
        align-items: center
        justify-content: center
        transition: transform .5s,opacity .5s
    .popupScale0
        transform: scale(0,0)
        opacity 0
    .popupScale1
        transform: scale(1,1)
        opacity 1
.popup-bgcolor
    background-color: rgba(48, 48, 48, .2)
