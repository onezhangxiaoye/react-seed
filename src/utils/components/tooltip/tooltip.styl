@import '../../stylus/baseStylus.styl'
.xbc-tip
    float left
    background-color: #fff
    border-radius: 6px
    padding: 3px 10px
    position absolute
    color: #000
    transition: transform .5s,opacity .5s
    display: flex
    align-items: center
    justify-content: center
    box-shadow: 0px 0px 5px 0px $tip-color;
    .angle
        width: 0
        height: 0
        position: absolute
    .angle-top
        border-left: 8px solid transparent
        border-right: 8px solid transparent
        border-top: 10px solid $tip-color
        bottom -10px
    .angle-bottom
        border-left: 8px solid transparent
        border-right: 8px solid transparent
        border-bottom: 10px solid $tip-color
        top: -10px
    .angle-left
        border-top: 8px solid transparent
        border-bottom: 8px solid transparent
        border-left: 10px solid $tip-color
        right -10px
    .angle-right
        border-top: 8px solid transparent
        border-bottom: 8px solid transparent
        border-right: 10px solid $tip-color
        left -10px
.popupScale0
    transform: scale(0,0)
    opacity 0
.popupScale1
    transform: scale(1,1)
    opacity 1