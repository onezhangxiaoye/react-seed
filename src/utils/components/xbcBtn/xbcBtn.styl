.xbcbtn
    padding: 10px 20px
    border-radius: 6px
    outline:none
    border:none
    cursor pointer
    background-color: #de995e
    color: white
    transition: background-color .5s
    &:hover
        background-color: #f5d6bc
.xbcbtn-animation-blue
    animation: xbc-animationblue .3s
.xbcbtn-animation-red
    animation: xbc-animationred .3s

box-shadow()
    box-shadow: 0px 0px 0px arguments

@keyframes xbc-animationblue
    0%
        box-shadow 0px none
    50%
        box-shadow 5px rgba(222, 153, 94, 0.1)
    100%
        box-shadow 5px rgba(222, 153, 94, 0)

@keyframes xbc-animationred
    0%
        box-shadow 0px none
    50%
        box-shadow 5px rgba(255, 0, 51,  0.1)
    100%
        box-shadow 5px rgba(255, 0, 51,  0)
